@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.LichHoc

@{
    ViewBag.Title = "Thêm lịch học";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<div class="card mb-3 mx-auto mt-3" style="max-width: 800px;">
    <div class="row g-0 mt-1 mb-0">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card-body p-0 text-dark">
                <h2 style="color: #0066b3">@ViewBag.Title</h2>
            </div>
        </div>
    </div>

    <div class="row g-0 mt-1">
        <div class="col-md-12">
            <div class="card-body text-dark p-0">
                @using (Html.BeginForm("LichHocAdd", "AdminLichHoc", new { area = "Admin" }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <input type="hidden" name="MaLichHoc" value="@ViewBag.MaLichHoc" />

                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.MaHV, "Học Viên")
                            @Html.DropDownListFor(model => model.MaHV, (SelectList)ViewBag.MaHVList, "-- Chọn học viên --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaHV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.MaLH, "Lớp Học")
                            @Html.DropDownListFor(model => model.MaLH, (SelectList)ViewBag.MaLHList, "-- Chọn lớp học --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaLH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.NgayHoc, "Ngày Học")
                            @Html.EditorFor(model => model.NgayHoc, "{0:yyyy/MM/dd}", new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.NgayHoc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.GioBatDau, "Giờ Bắt Đầu")
                            @Html.EditorFor(model => model.GioBatDau, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                            @Html.ValidationMessageFor(model => model.GioBatDau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.GioKetThuc, "Giờ Kết Thúc")
                            @Html.EditorFor(model => model.GioKetThuc, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                            @Html.ValidationMessageFor(model => model.GioKetThuc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.DiemDanh, "Điểm danh")
                            <div class="checkbox">
                                @Html.EditorFor(model => model.DiemDanh)

                                @Html.ValidationMessageFor(model => model.DiemDanh, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <div class="row my-2 mt-3 mb-3">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary">Thêm lịch học</button> &nbsp;
                            <a href="/Admin/AdminLichHoc/LichHocList" class="btn btn-danger">Quay lại</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
