@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.GiaoVien 
@{
    ViewBag.Title = "Thêm giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<div class="card mb-3 mx-auto mt-3" style="max-width: 800px;">
    <div class="row g-0 mt-1 mb-0">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card-body p-0 text-dark">
                <h2 style="color: #0066b3">@ViewBag.Title</h2>
            </div>
        </div>
    </div>
    <div class="row g-0 mt-1">
        <div class="col-md-12">
            <div class="card-body text-dark p-0">
                @using (Html.BeginForm("GiangVienAdd", "AdminGiangVien", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.HoTen, "Họ tên")
                            @Html.TextBoxFor(model => model.HoTen, new { placeholder = "Họ tên", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.Anh, "Ảnh giảng viên")
                            <input type="file" name="imageFile" id="imageFile" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.NgayVaoLam, "Ngày vào làm")
                            @Html.TextBoxFor(model => model.NgayVaoLam, "{0:yyyy/MM/dd}", new { placeholder = "Ngày vào làm", @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(model => model.NgayVaoLam, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.BangCapGV, "Bằng cấp")
                            @Html.TextBoxFor(model => model.BangCapGV, new { placeholder = "Bằng cấp", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.BangCapGV, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.LinhVucDaoTao, "Lĩnh vực đào tạo")
                            @Html.TextBoxFor(model => model.LinhVucDaoTao, new { placeholder = "Lĩnh vực đào tạo", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LinhVucDaoTao, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.Email, "Email")
                            @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.SoDT, "Số điện thoại")
                            @Html.TextBoxFor(model => model.SoDT, new { placeholder = "Số điện thoại", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.DiaChi, "Địa chỉ")
                            @Html.TextBoxFor(model => model.DiaChi, new { placeholder = "Địa chỉ", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.Luong, "Lương")
                            @Html.TextBoxFor(model => model.Luong, new { placeholder = "Lương", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Luong, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2 mt-3 mb-3">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary">Thêm giảng viên</button> &nbsp;
                            <a href="/Admin/AdminGiangVien/GiangVientList" class="btn btn-danger">Quay lại</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>