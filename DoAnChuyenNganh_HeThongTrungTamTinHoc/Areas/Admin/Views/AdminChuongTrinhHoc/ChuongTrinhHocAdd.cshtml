@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.ChuongTrinhHoc

@{
    ViewBag.Title = "Thêm chương trình học";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<div class="card mb-3 mx-auto mt-3" style="max-width: 800px;">
    <div class="row g-0 mt-1 mb-0">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card-body p-0 text-dark">
                <h2 style="color: #0066b3">@ViewBag.Title</h2>
            </div>
        </div>
    </div>

    <div class="row g-0 mt-1">
        <div class="col-md-12">
            <div class="card-body text-dark p-0">
                @using (Html.BeginForm("ChuongTrinhHocAdd", "AdminChuongTrinhHoc", new { area = "Admin" }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <input type="hidden" name="MaChuongTrinh" value="@ViewBag.MaCT" />

                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.TenChuongTrinh, "Tên chương trình")
                            @Html.TextBoxFor(model => model.TenChuongTrinh, new { placeholder = "Tên chương trình", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TenChuongTrinh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row my-2 mt-3 mb-3">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary">Thêm chương trình</button> &nbsp;
                            <a href="/Admin/AdminChuongTrinhHoc/ChuongTrinhHocList" class="btn btn-danger">Quay lại</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
