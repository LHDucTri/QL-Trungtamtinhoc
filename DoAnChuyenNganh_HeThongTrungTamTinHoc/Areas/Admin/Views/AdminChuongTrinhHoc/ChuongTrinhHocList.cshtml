@model IEnumerable<DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.ChuongTrinhHoc>

@{
    ViewBag.Title = "Quản lý Chương Trình Học";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<style>
    .custom-table {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .custom-table thead {
        background-color: #007bff;
        color: white;
    }

    .custom-table thead th {
        font-weight: bold;
        text-transform: uppercase;
        padding: 12px 15px;
    }

    .custom-table tbody tr:hover {
        background-color: #f1f5f9;
    }

    .custom-table tbody td {
        padding: 12px 15px;
        vertical-align: middle;
    }

    .table-responsive {
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 10px;
    }
</style>

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<h2 style="color: #0066b3">@ViewBag.Title</h2>

<a class="btn btn-outline-primary mt-3" style="width: 180px;" href="@Url.Action("Index", "Admin")">Quay lại</a>
<br />
<a class="btn btn-outline-primary mt-2 mb-2" style="width: 180px;" href="@Url.Action("ChuongTrinhHocAdd", "AdminChuongTrinhHoc")">Thêm Chương Trình Học</a>

<form class="d-flex mb-3 mt-2" action="@Url.Action("ChuongTrinhHocList", "AdminChuongTrinhHoc")">
    <input class="form-control me-2" id="search" name="search" value="@ViewBag.Search" type="search" placeholder="Tìm kiếm chương trình học" aria-label="Search" style="max-width: 400px;">
    <button class="btn btn-outline-primary ms-2" type="submit">Tìm kiếm</button>
    <a class="btn btn-danger ms-2" href="@Url.Action("ChuongTrinhHocList", "AdminChuongTrinhHoc")">Hủy</a>
</form>

<div class="container mt-5">
    <h2 class="mb-4 text-center" style="color: #0066b3">Danh Sách Chương Trình Học</h2>
    <div class="table-responsive">
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>Tên Chương Trình</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenChuongTrinh</td>
                        <td>
                            <a href="@Url.Action("ChuongTrinhHocEdit", "AdminChuongTrinhHoc", new { id = item.MaChuongTrinh })" style="text-decoration: none;" class="btn btn-light-primary btn-sm">Sửa</a>
                        </td>
                        <td>
                            <a href="@Url.Action("ChuongTrinhHocDelete", "AdminChuongTrinhHoc", new { id = item.MaChuongTrinh })" style="text-decoration: none;" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
