@model IEnumerable<DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.BinhLuanKhoaHoc>

@{
    ViewBag.Title = "Quản lý Bình Luận Khóa Học";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<style>
    .custom-table {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .custom-table thead {
        background-color: #007bff;
        color: white;
    }

    .custom-table thead th {
        font-weight: bold;
        text-transform: uppercase;
        padding: 12px 15px;
    }

    .custom-table tbody tr:hover {
        background-color: #f1f5f9;
    }

    .custom-table tbody td {
        padding: 12px 15px;
        vertical-align: middle;
    }

    .table-responsive {
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 10px;
    }
</style>

<h2 style="color: #0066b3">@ViewBag.Title</h2>

<a class="btn btn-outline-primary mt-3" style="width: 180px;" href="@Url.Action("Index", "Admin")">Quay lại</a>
<br />


<div class="container mt-5">
    <h2 class="mb-4 text-center" style="color: #0066b3">Danh Sách Bình Luận Khóa Học</h2>
    <div class="table-responsive">
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>Nội Dung</th>
                    <th>Học Viên</th>
                    <th>Khóa Học</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NoiDung</td>
                        <td>@item.HocVien.HoTen</td>
                        <td>@item.KhoaHoc.TenKH</td>
                        <td>
                            <a href="@Url.Action("BinhLuanDelete", "AdminBinhLuan", new { id = item.MaHV })" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
