@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.TaiKhoan
@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<style>
    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .form-floating label {
        color: #6c757d;
    }

</style>


<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 15px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">@ViewBag.Title</h3>
        </div>
        @using (Html.BeginForm("DangKy", "Account", FormMethod.Post))
        {
            <div>
                <span class="text-info">Lưu ý: Để có mã học viên, vui lòng đăng ký 1 khóa học!!!</span>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(model => model.MaHV, new { @class = "form-control", placeholder = "Mã học viên", id = "floatingMaHV" })
                    @Html.LabelFor(model => model.MaHV, "Mã học viên", new { @for = "floatingMaHV" })
                    @Html.ValidationMessageFor(model => model.MaHV, "", new { @class = "text-danger" })
                </div>

                <div class="form-floating mb-3">
                    @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control", placeholder = "Tên đăng nhập", id = "floatingTenDangNhap" })
                    @Html.LabelFor(model => model.TenDangNhap, "Tên đăng nhập", new { @for = "floatingTenDangNhap" })
                    @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                </div>

                <div class="form-floating mb-3">
                    @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", placeholder = "Mật khẩu", id = "floatingMatKhau" })
                    @Html.LabelFor(model => model.MatKhau, "Mật khẩu", new { @for = "floatingMatKhau" })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>

                <div class="form-floating mb-3">
                    @Html.Password("retypePassword", "", new { @class = "form-control", placeholder = "Nhập lại mật khẩu", id = "floatingRetypePassword" })
                    @Html.Label("retypePassword", "Nhập lại mật khẩu", new { @for = "floatingRetypePassword" })
                    @Html.ValidationMessage("retypePassword", "", new { @class = "text-danger" })
                </div>

                <div class="text-center mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary w-48 py-2 fw-bold">Đăng ký</button>
                    <a href="/Account/DangNhap" class="btn btn-secondary w-48 py-2 fw-bold">Quay lại</a>
                </div>
            </div>
        }
    </div>
</div>