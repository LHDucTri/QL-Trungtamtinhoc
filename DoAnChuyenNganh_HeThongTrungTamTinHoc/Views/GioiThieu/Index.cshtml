
@{
    ViewBag.Title = "Giới thiệu";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<style>
    .fixed-image {
        max-width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 5px;
    }

    .card {
        border: none;
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: #0066b3;
        color: white;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .btn-custom {
        background-color: #ff4c4c;
        color: white;
        font-weight: 500;
        padding: 10px 20px;
        transition: background-color 0.3s;
    }

        .btn-custom:hover {
            background-color: #ff3333;
        }

    h1 {
        color: orangered;
        font-weight: bold;
        margin-bottom: 30px;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.1);
    }
</style>

<nav aria-label="breadcrumb" class="breadcrumb mx-2">
    @Html.MvcSiteMap().SiteMapPath()
</nav>

<div class="container-fluid d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="container text-center">
        <h1>@ViewBag.Title</h1>
        <div class="row mt-4">
            <div class="col-md-4 d-flex mb-4">
                <div class="card shadow-sm h-100 w-100">
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">Lịch sử hình thành</h4>
                        <a href="/GioiThieu/LichSu">
                            <img src="~/images/lichsuhinhthanh.jpg" alt="Lịch sử hình thành" class="img-fluid card-img-top fixed-image" />
                        </a>
                        <div class="mt-2">
                            <a href="/GioiThieu/LichSu" class="btn btn-custom">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex mb-4">
                <div class="card shadow-sm h-100 w-100">
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">Chức năng nhiệm vụ</h4>
                        <a href="/GioiThieu/ChucNang">
                            <img src="~/images/chucnangnhiemvu.jpg" alt="Chức năng nhiệm vụ" class="img-fluid card-img-top fixed-image" />
                        </a>
                        <div class="mt-2">
                            <a href="/GioiThieu/ChucNang" class="btn btn-custom">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex mb-4">
                <div class="card shadow-sm h-100 w-100">
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">Cơ cấu tổ chức</h4>
                        <a href="/GioiThieu/ToChuc">
                            <img src="~/images/cocautochuc.jpg" alt="Cơ cấu tổ chức" class="img-fluid card-img-top fixed-image" />
                        </a>
                        <div class="mt-2">
                            <a href="/GioiThieu/ToChuc" class="btn btn-custom">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





