@model List<DoAnChuyenNganh_HeThongTrungTamTinHoc.ViewModels.LichSuGiaoDichViewModel>
@{
    ViewBag.Title = "LichSuGiaoDich";
    Layout = "~/Views/Shared/_HocVien.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center" style="color: #0066b3;">Lịch Sử Giao Dịch</h2>
    <hr />

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered table-hover mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Tên Học Viên</th>
                    <th>Tên Khóa Học</th>
                    <th>Phương Thức Thanh Toán</th>
                    <th>Ngày Giao Dịch</th>
                    <th>Số Tiền</th>
                    <th>Số Điện Thoại</th>
                    <th>Email</th>
                    <th>Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].TenHocVien</td>
                        <td>@Model[i].TenKhoaHoc</td>
                        <td>@Model[i].TenPhuongThuc</td>
                        <td>@Model[i].NgayGD</td>
                        <td>@String.Format("{0:0,0} VNĐ", Model[i].SoTien)</td>
                        <td>@Model[i].SoDT</td>
                        <td>@Model[i].Email</td>
                        <td>
                            @if (Model[i].TrangThai == "Đã duyệt")
                            {
                                <span class="badge bg-success">@Model[i].TrangThai</span> }
                            else
                            {
                                <span class="badge bg-danger">@Model[i].TrangThai</span>}
                        </td>
                    </tr>
           }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            <strong>Không có giao dịch nào được tìm thấy.</strong>
        </div>
    }
</div>


