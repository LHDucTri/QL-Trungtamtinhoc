@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.KhoaHoc
@{
    ViewBag.Title = "Chi tiết khóa học";
    Layout = "~/Views/Shared/_Main.cshtml";
    var userName = Context.Request.Cookies["NguoiDung"];
}
@using System.Web.Mvc
@using System.Web.Mvc.Html

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

<style>
    .link-style {
        color: black;
        text-decoration: none;
        font-weight: 700;
    }

    #khoahocs {
        border: none;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        #khoahocs:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-weight: 600;
        margin-bottom: 15px;
    }
</style>

<div class="container-fluid p-0">
    <swiper-container class="mySwiper" pagination="true" pagination-clickable="true" navigation="true" space-between="30"
                      centered-slides="true" autoplay-delay="2500" autoplay-disable-on-interaction="false">
        <swiper-slide>
            <a href="/KhoaHoc/ChiTietKhoaHoc/KH015">
                <img class="card-img-top" src="https://csc.edu.vn/data/images/slider/Tin%20hoc%20Van%20Phong/298-VBA.png" alt="Product image" style="width: 100%; height: auto;">
            </a>
        </swiper-slide>
        <swiper-slide>
            <a href="/KhoaHoc/ChiTietKhoaHoc/KH013">
                <img class="card-img-top" src="https://csc.edu.vn/data/images/slider/Data-science/Banner-Analytics-lap-trinh.jpg" alt="Product image" style="width: 100%; height: auto;">
            </a>
        </swiper-slide>
        <swiper-slide>
            <a href="/KhoaHoc/ChiTietKhoaHoc/KH027">
                <img class="card-img-top" src="https://csc.edu.vn/data/images/slider/Data-science/combo-python-co-ban-python-visualization-k290.png" alt="Product image" style="width: 100%; height: auto;">
            </a>
        </swiper-slide>
        <swiper-slide>
            <a href="/KhoaHoc/ChiTietKhoaHoc/KH019">
                <img class="card-img-top" src="	https://csc.edu.vn/data/images/slider/Tin%20hoc%20Van%20Phong/299-ud-cntt-co-ban.jpg" alt="Product image" style="width: 100%; height: auto;">
            </a>
        </swiper-slide>
        <swiper-slide>
            <a href="/KhoaHoc/ChiTietKhoaHoc/KH014">
                <img class="card-img-top" src="https://csc.edu.vn/data/images/slider/lap-trinh/lap-trinh-di-dong-da-nen-tang-flutter-k299.png" alt="Product image" style="width: 100%; height: auto;">
            </a>
        </swiper-slide>
    </swiper-container>
</div>

<nav aria-label="breadcrumb" class="breadcrumb mx-2">
    @Html.MvcSiteMap().SiteMapPath()
</nav>
<div class="card mb-3 mx-auto shadow-lg border-2 mt-3" style="max-width: 1024px; border-radius: 8px; background-color: #f8f9fa;">
    <div class="row g-0 mt-1">
        <div class="col-md-12 text-center">
            <div class="card-body">
                <h2 class="text-danger" style="font-weight: bold; font-size: 2.5em;">Chi tiết khóa học</h2>
            </div>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-md-6">
            <img src="~/images/@Model.Anh" class="img-fluid" alt="Course image" style="width: 100%; height: 100%;">
        </div>
        <div class="col-md-6 d-flex align-items-center p-3 shadow-sm" style="background-color: #0066b3;">
            <div class="card-body">
                <h5 class="card-title mb-2 text-white" style="font-weight: 600; font-size: 1.8em;">@Model.TenKH</h5>
                <p class="card-text mb-2 text-white">Chương trình học: <a href="/ChuongTrinhHoc/KhoaHocTheoChuongTrinh/@Model.ChuongTrinhHoc.MaChuongTrinh" class="text-warning">@Html.DisplayFor(model => model.ChuongTrinhHoc.TenChuongTrinh)</a></p>
                <p class="card-text mb-2 text-white">Ngày khai giảng: <span class="text-warning">@Html.DisplayFor(model => model.NgayBatDau)</span></p>
                <p class="card-text mb-2 text-white">Ngày kết thúc: <span class="text-warning">@Html.DisplayFor(model => model.NgayKetThuc)</span></p>
                <p class="card-text mb-2 text-white">Số buổi học: <span class="text-warning">@Html.DisplayFor(model => model.Sobuoihoc)</span></p>
                <p class="card-text mb-2 text-white">Học phí: <span class="text-warning">@string.Format("{0:N0} VND", Model.HocPhi)</span></p>
                <p class="card-text mb-2 text-white">Loại khóa học: <span class="text-warning">@Html.DisplayFor(model => model.LoaiKH)</span></p>
                @if (Session["MaHV"] == null)
                {
                    <div class="mt-4">
                        <a href="@Url.Action("DangKyKhoaHoc", "KhoaHoc", new { MaKH = Model.MaKH })" class="btn btn-danger text-white px-4 py-2" style="font-weight: bold;">Đăng ký</a>
                    </div> 
                }
                else
                {
                    <p class="text-white mt-4"><strong>Hãy đến trang học viên của bạn để thực hiện đăng ký khóa học</strong></p>
                }
            </div>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-md-12">
            <div class="card-body text-white text-justify" style="line-height: 1.6;">
                <p class="card-text mt-3" style="font-size: 1.1em; color: #0066b3">@Model.MoTa</p>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid p-0 overflow-hidden">
    <div class="w-100 p-3" style="border-radius: 0px; background-color: #0066b3;">
        <h2 class="text-center text-uppercase text-white">Khóa học nổi bật</h2>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                @foreach (var khoahoc in ViewBag.KhoaHocNoiBats)
                {
                    <div class="swiper-slide">
                        <div id="khoahocs" class="card mb-4 mx-auto shadow-sm h-100" style="max-width: 300px;">
                            <div class="card-body d-flex flex-column">
                                @if (khoahoc.Anh != "")
                                {
                                    <a href="/KhoaHoc/ChiTietKhoaHoc/@khoahoc.MaKH">
                                        <img src="~/images/@khoahoc.Anh" alt="Khóa học" class="card-img-top" />
                                    </a>
                                }
                                else
                                {
                                    <a href="/KhoaHoc/ChiTietKhoaHoc/@khoahoc.MaKH">
                                        <img src="~/images/noimage.jpg" alt="Khóa học" class="card-img-top" />
                                    </a>
                                }
                                <h5 class="card-title flex-grow-1 mt-2">
                                    <a href="/KhoaHoc/ChiTietKhoaHoc/@khoahoc.MaKH" class="text-decoration-none" style="color: #0066b3">@khoahoc.TenKH</a>
                                </h5>
                                <span class="card-text flex-grow-1">Ngày khai giảng: @khoahoc.NgayBatDau</span>
                                <h4 style="color: orangered;">Học phí: @string.Format("{0:N0} VND", khoahoc.HocPhi)</h4>
                                <p>Số lượt đăng ký: <span class="fw-bold text-info">@khoahoc.SoLanDangKy</span></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="container mt-5 mb-3">
    <div class="row">
        <div class="col-12">
            <h4 class="mb-3" style="color: orangered">Bình luận (@(ViewBag.BinhLuans != null ? ViewBag.TongSoBinhLuan : 0))</h4>

            <div class="d-flex justify-content-between mb-3">
                <form method="get" action="/KhoaHoc/ChiTietKhoaHoc/@Model.MaKH" class="d-inline">
                    <label for="sort_by" class="me-2 fw-bold" style="color: orangered;">Sắp xếp:</label>
                    <select name="sort_by" id="sortBy" class="form-select d-inline w-auto" onchange="this.form.submit()">
                        <option value="datetime_desc" @(ViewBag.SortBy == "datetime_desc" ? "selected" : "")>Mới nhất</option>
                        <option value="datetime_asc" @(ViewBag.SortBy == "datetime_asc" ? "selected" : "")>Cũ nhất</option>
                    </select>
                </form>
            </div>

            <div id="danhSachBinhLuan">
                @foreach (var binhluan in ViewBag.BinhLuans)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <img src="~/AnhHocVien/@binhluan.HocVien.Anh" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;" class="rounded-circle border" />
                                <h5 class="card-title" style="color: #0066b3">@binhluan.HocVien.HoTen</h5>
                            </div>
                            <p class="card-text mt-1">@binhluan.NoiDung</p>
                            <span class="card-subtitle mb-2 text-muted" style="font-size: 0.8rem;">Ngày đăng: @binhluan.NgayBinhLuan</span>
                            @if (Session["MaHV"]?.ToString() == binhluan.MaHV)
                            {
                                <div class="d-flex gap-2 mt-1">
                                    <button type="button" 
                                            class="btn btn-secondary"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editCommentModal-@binhluan.NgayBinhLuan.Ticks">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </button>
                                    <button data-bs-toggle="modal"
                                            data-bs-target="#deleteCommentModal-@binhluan.NgayBinhLuan.Ticks"
                                            class="btn btn-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="modal fade" id="editCommentModal-@binhluan.NgayBinhLuan.Ticks" tabindex="-1" aria-labelledby="editCommentModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editCommentModalLabel" style="color: #0066b3">Chỉnh sửa bình luận</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    @Html.AntiForgeryToken()
                                    <div class="mb-3">
                                        <textarea class="form-control" id="NoiDung-@binhluan.NgayBinhLuan.Ticks" name="NoiDung" rows="4" required placeholder="Nhập bình luận tại đây">@binhluan.NoiDung</textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <form id="suaBinhLuanForm-@binhluan.NgayBinhLuan.Ticks" method="post" action="@Url.Action("SuaBinhLuan", "KhoaHoc", new { MaKH = Model.MaKH, NgayBinhLuan = binhluan.NgayBinhLuan })">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa-solid fa-pen-to-square"></i> Lưu
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="deleteCommentModal-@binhluan.NgayBinhLuan.Ticks" tabindex="-1" aria-labelledby="deleteCommentModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteCommentModalLabel" style="color: #0066b3">Xóa bình luận</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Bạn có chắc muốn xóa bình luận này không</p>
                                </div>
                                <div class="modal-footer">
                                    <form id="xoaBinhLuanForm-@binhluan.NgayBinhLuan.Ticks" method="post" action="@Url.Action("XoaBinhLuan", "KhoaHoc", new { MaKH = Model.MaKH, NgayBinhLuan = binhluan.NgayBinhLuan })">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script>
                        document.getElementById('suaBinhLuanForm-@binhluan.NgayBinhLuan.Ticks').addEventListener('submit', function (e) {
                            // Lấy giá trị từ textarea
                            const noiDung = document.getElementById('NoiDung-@binhluan.NgayBinhLuan.Ticks').value;

                            // Gán giá trị vào URL action
                            const actionUrl = this.getAttribute('action');
                            const updatedUrl = `${actionUrl}&NoiDung=${encodeURIComponent(noiDung)}`;
                            this.setAttribute('action', updatedUrl);
                        });
                    </script>
                }

            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>
    </div>


    <div class="container-fluid d-flex justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center pagination-custom">
                @{
                    int trangtruoc = ViewBag.Page - 1;
                    if (trangtruoc <= 0)
                    {
                        trangtruoc = 1;
                    }
                    int trangsau = ViewBag.Page + 1;
                    if (trangsau > ViewBag.NumberOfPages)
                    {
                        trangsau = ViewBag.NumberOfPages;
                    }
                }
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("ChiTietKhoaHoc", "KhoaHoc", new { id = Model.MaKH, page = trangtruoc, sort_by = ViewBag.SortBy })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 0; i < ViewBag.NumberOfPages; i++)
                {
                    if (i + 1 == ViewBag.Page)
                    {
                        <li class="page-item active">
                            <a class="page-link" href="/KhoaHoc/ChiTietKhoaHoc/@Model.MaKH?page=@(i + 1)&sort_by=@ViewBag.SortBy">@(i + 1)</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="/KhoaHoc/ChiTietKhoaHoc/@Model.MaKH?page=@(i + 1)&sort_by=@ViewBag.SortBy">@(i + 1)</a>
                        </li>
                    }
                }
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("ChiTietKhoaHoc", "KhoaHoc", new { id = Model.MaKH, page = trangsau, sort_by = ViewBag.SortBy })" aria-label="Previous">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="container-fluid text-center mb-2">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#tatCaBinhLuanModal">Xem tất cả bình luận</button>
        <div class="modal fade" id="tatCaBinhLuanModal" tabindex="-1" aria-labelledby="tatCaBinhLuanModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="tatCaBinhLuanModalLabel" style="color: #0066b3">Tất cả bình luận</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="danhSachBinhLuan">
                            @if (ViewBag.TatCaBinhLuan.Count == 0)
                            {
                                <h3>Chưa có bình luận nào</h3>
                            }
                            else
                            {
                                foreach (var binhluan in ViewBag.TatCaBinhLuan)
                                {
                                    <div class="card mb-3 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <img src="~/AnhHocVien/@binhluan.HocVien.Anh" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;" class="rounded-circle border" />
                                                <h5 class="card-title" style="color: #0066b3">@binhluan.HocVien.HoTen</h5>
                                            </div>
                                            <p class="card-text mt-1 text-start">@binhluan.NoiDung</p>
                                            <span class="card-subtitle mb-2 text-muted" style="font-size: 0.8rem;">Ngày đăng: @binhluan.NgayBinhLuan</span>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="binhluan-thongbao" class="alert mt-2" style="display: none;"></div>

    <div class="row">
        <div class="col-12">
            <h4 class="mb-3" style="color: orangered;">Thêm bình luận</h4>
            <form id="formThemBinhLuan" action="@Url.Action("ThemBinhLuan", "KhoaHoc")" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="MaKH" value="@Model.MaKH" />
                <input type="hidden" name="MaHV" value="@userName" />
                <div class="mb-3">
                    <textarea class="form-control" id="NoiDung" name="NoiDung" rows="4" required placeholder="Nhập bình luận tại đây"></textarea>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-paper-plane"></i>&nbsp;Đăng</button>
            </form>
        </div>
    </div>
</div>

<script>
    function scroll() {
        document.getElementById('danhSachBinhLuan').scrollIntoView({
            behavior: 'smooth'
        });
    }
</script>

